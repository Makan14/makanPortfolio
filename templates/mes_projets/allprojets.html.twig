                <p class="card-text">{{projets.nom}}</p> 
                <p class="card-text">{{projets.lien}}</p> 
            {% if is_granted('ROLE_ADMIN') %}  
                <td><a class="btn btn-success" href="{{path('app_admin_projets_edit',{id: projets.id})}}">Modifier</a></td>
                <td><a class="btn btn-danger" href="{{path('app_admin_projets_delete',{id: projets.id})}}">Supprimer</a></td> 
                <td><a class="btn btn-warning" href="{{path('app_view_projets',{id: projets.id})}}">Voir plus</a></td> 
            {% endif %}
              </div> 
            </div>
        </div>
        {% endfor %}
        
    </div>
</div>

{% endblock %}
