{% extends 'base.html.twig' %}

{% block title %}FORMATIONS{% endblock %}

{% block body %}


<div class="titre">
    <h1>Mes Formations</h1>  

</div> 

<div class="container"> 
    <div class="row">
        {% for formations in formations %} 
        <div class="col-md-4 mt-5 d-flex mt-5"> 
            <div class="card" style="width: 18rem;">
              {# <img src="{{formations.images}}" class="card-img-top" alt="...">  #}
              <div class="card-body">
                <img src="{{formations.logo}}" style="width:90px; height:90px">
                <p class="card-text">{{formations.titres}}</p> 
                <p class="card-text">{{formations.organismes}}</p> 
                <p class="card-text">{{formations.periode}}</p> 
              </div>
            </div>
        </div>
        {% endfor %} 
        
    </div>
</div>

{% endblock %}
